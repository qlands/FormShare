<div class="modal inmodal" id="edit_link_partner_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                {% block link_partner_header %}
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">{{ _('Close') }}</span></button>
                    <h4 class="modal-title">{{ _('Edit partner') }}</h4>
                    <small id="partnerwho" class="font-bold">Editing partner options of Carlos Quiros</small>
                {% endblock link_partner_header %}
            </div>
            <form autocomplete="off" id="edit_link_partner_to_project" class="require_busy" role="form" method="post" action="{{ request.route_url("project_link_partner",userid=activeProject.owner, projcode=activeProject.project_code) }}">
                {% block link_partner_form %}
                    {{ form.secure_form(request) }}
                    <div class="modal-body">
                        {% block link_partner_fields %}
                            <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Time bound') }}</label>
                                <div class="col-sm-10"><input type="checkbox" id="partner_time_bound_edit" name="time_bound" class="js-switch-partner-edit"/></div>
                            </div>
                            <div class="form-group" id="edit_partner_time_bound" style="display: none">
                                <label class="font-normal">{{ _('Access dates') }} (yyyy-mm-dd)</label>
                                <div class="input-daterange input-group" id="datepicker">
                                    <input type="text" id="edit_partner_access_from" class="form-control-sm form-control" name="access_from"/>
                                    <span class="input-group-addon">{{ _('to') }}</span>
                                    <input type="text" id="edit_partner_access_to" class="form-control-sm form-control" name="access_to"/>
                                </div>
                            </div>
                        {% endblock link_partner_fields %}
                    </div>
                    <div class="modal-footer">
                        {% block link_partner_form_actions %}
                            <button type="button" class="btn btn-white" data-dismiss="modal">{{ _('Cancel') }}</button>
                            <button type="submit" class="btn btn-warning">{{ _('Modify') }}</button>
                        {% endblock link_partner_form_actions %}
                    </div>
                {% endblock link_partner_form %}
            </form>
        </div>
    </div>
</div>