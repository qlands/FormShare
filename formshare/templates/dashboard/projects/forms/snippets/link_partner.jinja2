<div class="modal inmodal" id="link_partner_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                {% block link_partner_header %}
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">{{ _('Close') }}</span></button>
                    <h4 class="modal-title">{{ _('Link partner') }}</h4>
                {% endblock link_partner_header %}
            </div>
            <form autocomplete="off" id="link_partner_to_form" class="require_busy" role="form" method="post" action="{{ request.route_url("form_add_partner",userid=projectDetails.owner, projcode=projectDetails.project_code, formid=formDetails.form_id) }}">
                {% block link_partner_form %}
                    {{ form.secure_form(request) }}
                    <div class="modal-body">
                        {% block link_partner_fields %}
                            <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Partner') }}</label>
                                <div class="col-sm-10">
                                    <select name="partner_id" id="partner" style="width: 100%; !important;" class="js-example-data-ajax form-control"></select>
                                </div>
                            </div>
                            <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Time bound') }}</label>
                                <div class="col-sm-10"><input type="checkbox" name="time_bound" class="js-switch-partner"/></div>
                            </div>
                            <div class="form-group" id="partner_time_bound" style="display: none">
                                <label class="font-normal">{{ _('Access dates') }} (yyyy-mm-dd)</label>
                                <div class="input-daterange input-group" id="datepicker">
                                    <input type="text" id="access_from" class="form-control-sm form-control" name="access_from"/>
                                    <span class="input-group-addon">{{ _('to') }}</span>
                                    <input type="text" id="access_to" class="form-control-sm form-control" name="access_to"/>
                                </div>
                            </div>
                        {% endblock link_partner_fields %}
                    </div>
                    <div class="modal-footer">
                        {% block link_partner_form_actions %}
                            <button type="button" class="btn btn-white" data-dismiss="modal">{{ _('Cancel') }}</button>
                            <button type="submit" class="btn btn-primary">{{ _('Link') }}</button>
                        {% endblock link_partner_form_actions %}
                    </div>
                {% endblock link_partner_form %}
            </form>
        </div>
    </div>
</div>