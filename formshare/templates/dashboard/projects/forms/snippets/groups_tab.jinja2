<div class="ibox">
    <div class="ibox-title">
        {% block groups_tab_title %}
            <h5>{{ _('Assigned assistant groups') }}</h5>
            <div class="ibox-tools">
                {% block groups_tab_tools %}
                    {% if projectDetails.access_type < 4 %}
                        <a style="margin-right: 10px" data-toggle="modal" data-target="#add_group">
                            <i class="fa fa-plus-square text-success" title="{{ _('Assign new') }}"></i>
                        </a>
                    {% endif %}
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up" style="margin-right: 10px"></i>
                    </a>
                    <a class="fullscreen-link">
                        <i class="fa fa-expand"></i>
                    </a>
                {% endblock groups_tab_tools %}
            </div>
        {% endblock groups_tab_title %}
    </div>
    <div class="ibox-content">
        {% block groups_tab_content %}
            <div class="row">
                <div class="col-md-12">
                    {% if formgroups|length > 0 %}
                        <small>{{ _('Click / Tap and hold to remove') }}</small>
                    {% else %}
                        <small>{{ _("You don't have groups. Add one by clicking the + button") }}</small>
                    {% endif %}
                    <ul class="tag-list" style="padding: 0">
                        {% for group in formgroups %}
                            {% set group_role = _('Undefined') %}
                            {% if group.group_privileges == 1 %}
                                {% set group_role = _('Submit') %}
                            {% endif %}
                            {% if group.group_privileges == 2 %}
                                {% set group_role = _('Clean') %}
                            {% endif %}
                            {% if group.group_privileges == 3 %}
                                {% set group_role = _('Submit and clean') %}
                            {% endif %}
                            <li><a title="{{ group_role }}" id="btn_edit_assistant" urn="{{ request.route_url('form_edit_group',userid=projectDetails.owner, projcode=projectDetails.project_code, formid=formDetails.form_id,groupid=group.group_id) }}" data-toggle="modal" data-target="#edit_group" data-group-remove-url="{{ request.route_url('form_remove_group',userid=projectDetails.owner, projcode=projectDetails.project_code, formid=formDetails.form_id,groupid=group.group_id) }}" data-group-role="{{ group.group_privileges }}" data-group-name="{{ group.group_desc }}" class="group-item"> {{ group.group_desc }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endblock groups_tab_content %}
    </div>
</div>