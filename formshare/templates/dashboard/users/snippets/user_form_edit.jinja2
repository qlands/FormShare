{% extends 'dashboard/users/snippets/user_form.jinja2' %}

{% block user_form_code %}
    <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('User ID') }}</label>
        <div class="col-sm-10"><input readonly type="text" class="form-control" name="user_id" value="{{ userData.user_id }}"></div>
    </div>
{% endblock user_form_code %}

{% block user_form_passwords %}

{% endblock user_form_passwords %}

{% block user_form_controls_extra %}
    {{ super() }}
    <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('Active') }}</label>
        <div class="col-sm-10"><input type="checkbox" name="user_active" class="js-switch2" {% if userData|length > 0 %} {% if userData.user_active == 1 %}checked{% endif %}{% else %}checked{% endif %} /></div>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('API Key') }}</label>
        <div class="input-group col-sm-10">
            <input type="text" readonly class="form-control" id="user_apikey" name="user_apikey" value="{{ userData.user_apikey }}">
            <span class="input-group-append">
                <button type="button" id="genkey" class="btn btn-default" title="{{ _('Generate new key') }}"><i class="fas fa-sync-alt"></i></button>
            </span>
        </div>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group row"><label class="col-sm-2 col-form-label">{{ _('API Secret') }}</label>
        <div class="input-group col-sm-10">
            <input type="text" readonly class="form-control" id="user_apisecret" name="user_apisecret" value="{{ userData.user_apisecret }}">
            <span class="input-group-append">
                <button type="button" id="gensecret" class="btn btn-default" title="{{ _('Generate new secret') }}"><i class="fas fa-sync-alt"></i></button>
            </span>
        </div>
    </div>
    <div class="hr-line-dashed"></div>
{% endblock user_form_controls_extra %}

{% block user_form_actions %}
    <div class="form-group row">
        <div class="col-sm-4 col-sm-offset-2">
            <button class="btn btn-warning btn-sm" type="submit" name="modify">{{ _('Modify user') }}</button>
        </div>
    </div>
{% endblock user_form_actions %}